{% extends 'base.html.twig' %}

{% block title %}News{% endblock %}

{% block main %}

         <table>
             {% for news in pagination %}
                 <tr {% if loop.index is odd %}class="color"{% endif %}>
                     <td>
                     <a href="{{ path('show_news', { id: news.id }) }}">
                         {{  news.heading }}
                         {{ news.annotation }}
                     </a>

                     </td>
                 </tr>
             {% endfor %}
         </table>

         <div class="navigation">
             {{ knp_pagination_render(pagination) }}
         </div>

{% endblock %}
